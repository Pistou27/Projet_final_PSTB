# ===========# ================================
# Configuration Ollama/Mistral
# ================================
# URL de l'API Ollama (local par défaut)
OLLAMA_HOST=http://localhost:11434

# Modèle Mistral à utiliser (doit être disponible via ollama)
OLLAMA_MODEL=mistral:latest

# ================================
# Configuration Groq
# ================================
# Clé API Groq (obligatoire pour utiliser Groq)
GROQ_API_KEY=your_groq_api_key_here

# Modèle Groq à utiliser
GROQ_MODEL=llama3-8b-8192=============
# Configuration Projet Final GenIA
# ================================
# Copiez ce fichier vers .env et modifiez selon vos besoins

# ================================
# Configuration des Répertoires
# ================================
DATA_DIR=data
VECTORSTORE_DIR=vectorstore
MEMORY_DB_PATH=memory/memory.sqlite
MODEL_PATH=models

# ================================
# Configuration Ollama/Mistral
# ================================
# URL de l'API Ollama (local par défaut)
OLLAMA_HOST=http://localhost:11434

# Modèle Mistral à utiliser (doit être disponible via ollama)
MISTRAL_MODEL=mistral:latest

# Paramètres de génération
GENERATION_TEMPERATURE=0.2
GENERATION_MAX_TOKENS=1000

# ================================
# Configuration RAG Pipeline
# ================================
# Modèles d'embeddings et reranking
EMBEDDING_MODEL=BAAI/bge-m3
RERANKER_MODEL=BAAI/bge-reranker-base

# Paramètres de recherche
DEFAULT_TOP_K=20
DEFAULT_RERANK_TOP_K=5

# Paramètres de chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ================================
# Configuration Qdrant
# ================================
# Nom de la collection Qdrant
COLLECTION_NAME=documents

# Taille des vecteurs (BGE-M3 = 1024)
VECTOR_SIZE=1024

# Chemin local Qdrant (relatif au VECTORSTORE_DIR)
QDRANT_PATH=qdrant_local

# ================================
# Configuration Flask
# ================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=False

# Clé secrète Flask (générer une nouvelle clé en production)
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# ================================
# Configuration Avancée
# ================================
# Timeout pour les requêtes LLM (secondes)
LLM_TIMEOUT=30

# Nombre maximum de sessions en mémoire
MAX_SESSIONS_CACHE=100

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Activer/désactiver le reranking (True/False)
ENABLE_RERANKING=True

# Activer/désactiver la mise en cache des embeddings
ENABLE_EMBEDDING_CACHE=True

# ================================
# Configuration Performance
# ================================
# Nombre de threads pour le traitement parallèle
N_THREADS=4

# Taille du batch pour l'ingestion
INGESTION_BATCH_SIZE=100

# Timeout pour les opérations Qdrant (secondes)
QDRANT_TIMEOUT=60
